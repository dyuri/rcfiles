#
# Prompt
#

# Set the prompt theme to load.
# Setting it to 'random' loads a random theme.
# Auto set to 'off' on dumb terminals.
# zstyle ':prezto:module:prompt' theme 'sorin'

POWERLEVEL9K_MODE='nerdfont-complete'
POWERLEVEL9K_STATUS_VERBOSE=false
POWERLEVEL9K_STATUS_OK_IN_NON_VERBOSE=true
POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX=''
POWERLEVEL9K_MULTILINE_SECOND_PROMPT_PREFIX="%B%F{161}❯%F{221}❯%F{149}❯%f%b "
POWERLEVEL9K_SHORTEN_DIR_LENGTH=8
POWERLEVEL9K_SHORTEN_STRATEGY="truncate_middle"
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(os_icon context dir dir_writable virtualenv vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status time)
POWERLEVEL9K_OS_ICON_BACKGROUND="149"
POWERLEVEL9K_OS_ICON_FOREGROUND="232"
DEFAULT_USER='dyuri'
POWERLEVEL9K_CONTEXT_DEFAULT_BACKGROUND="149"
POWERLEVEL9K_CONTEXT_DEFAULT_FOREGROUND="234"
POWERLEVEL9K_CONTEXT_TEMPLATE="%B%n@%m%b"
POWERLEVEL9K_DIR_HOME_FOREGROUND="191"
POWERLEVEL9K_DIR_HOME_BACKGROUND="243"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND="191"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND="243"
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND="191"
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND="243"
POWERLEVEL9K_DIR_WRITABLE_FORBIDDEN_BACKGROUND="243"
POWERLEVEL9K_DIR_WRITABLE_FORBIDDEN_FOREGROUND="160"
POWERLEVEL9K_VIRTUALENV_BACKGROUND="241"
POWERLEVEL9K_VIRTUALENV_FOREGROUND="248"
POWERLEVEL9K_VCS_CLEAN_BACKGROUND='238'
POWERLEVEL9K_VCS_CLEAN_FOREGROUND='108'
POWERLEVEL9K_VCS_UNTRACKED_BACKGROUND='238'
POWERLEVEL9K_VCS_UNTRACKED_FOREGROUND='180'
POWERLEVEL9K_VCS_MODIFIED_BACKGROUND='238'
POWERLEVEL9K_VCS_MODIFIED_FOREGROUND='161'
POWERLEVEL9K_STATUS_OK_BACKGROUND="241"
